@model IEnumerable<SelfOrderingSystemKiosk.Areas.Customer.Models.Order>
@{
    ViewData["Title"] = "Kitchen Dashboard";
    var totalOrders = Model.Count();
    var pendingOrders = Model.Count(o => o.Status == "Pending");
    var inProgressOrders = Model.Count(o => o.Status == "In Progress");
    var completedOrders = Model.Count(o => o.Status == "Completed");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #FFB347 0%, #FFA07A 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

            .header h1 {
                display: flex;
                align-items: center;
                gap: 15px;
                font-size: 2rem;
                color: #333;
            }

        .logo {
            font-size: 3rem;
        }

        .menu-btn {
            background: rgba(255, 255, 255, 0.9);
            border: none;
            padding: 12px 30px;
            border-radius: 30px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: rgba(255, 255, 255, 0.9);
            padding: 25px;
            border-radius: 20px;
            text-align: center;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

            .stat-card h2 {
                font-size: 3rem;
                margin-bottom: 5px;
            }

            .stat-card p {
                color: #666;
                font-size: 1rem;
            }

            .stat-card.pending h2 {
                color: #FFC107;
            }

            .stat-card.progress h2 {
                color: #2196F3;
            }

            .stat-card.completed h2 {
                color: #4CAF50;
            }

        .filter-tabs {
            display: flex;
            gap: 15px;
            margin-bottom: 30px;
            flex-wrap: wrap;
        }

        .filter-btn {
            background: rgba(255, 255, 255, 0.7);
            border: none;
            padding: 12px 25px;
            border-radius: 30px;
            font-size: 1rem;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s;
        }

            .filter-btn:hover, .filter-btn.active {
                background: rgba(255, 255, 255, 0.95);
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(0,0,0,0.15);
            }

        .status-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            display: inline-block;
        }

            .status-dot.pending {
                background: #FFC107;
            }

            .status-dot.progress {
                background: #2196F3;
            }

            .status-dot.completed {
                background: #4CAF50;
            }

            .status-dot.canceled {
                background: #F44336;
            }

        .orders-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 25px;
        }

        .order-card {
            background: white;
            border-radius: 20px;
            padding: 25px;
            box-shadow: 0 6px 20px rgba(0,0,0,0.15);
            border-left: 6px solid;
            transition: transform 0.3s;
        }

            .order-card:hover {
                transform: translateY(-5px);
            }

            .order-card.pending {
                border-left-color: #FFC107;
            }

            .order-card.progress {
                border-left-color: #2196F3;
            }

            .order-card.completed {
                border-left-color: #4CAF50;
            }

        .order-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .order-number {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .order-time {
            text-align: right;
            font-size: 0.9rem;
            color: #666;
        }

        .table-info {
            font-size: 0.9rem;
            color: #888;
            margin-bottom: 15px;
        }

        .order-items {
            background: rgba(0,0,0,0.02);
            border: 1px solid #eee;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 15px;
        }

            .order-items h4 {
                margin-bottom: 10px;
                font-size: 0.9rem;
                color: #666;
            }

        .item-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 8px;
            font-size: 0.95rem;
        }

        .special-instructions {
            background: #FFF9E6;
            border-left: 3px solid #FFC107;
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 15px;
            font-size: 0.9rem;
        }

            .special-instructions i {
                color: #FFC107;
                margin-right: 8px;
            }

        .order-actions {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 10px;
        }

        .action-btn {
            border: none;
            padding: 12px;
            border-radius: 10px;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            transition: all 0.3s;
        }

            .action-btn:hover {
                transform: scale(1.05);
            }

        .btn-pending {
            background: #FFC107;
            color: #333;
        }

        .btn-start {
            background: #2196F3;
            color: white;
        }

        .btn-done {
            background: #4CAF50;
            color: white;
        }

        .btn-cancel {
            background: #F44336;
            color: white;
        }

        .status-badge {
            display: inline-block;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
        }

            .status-badge.pending {
                background: #FFF3CD;
                color: #856404;
            }

            .status-badge.progress {
                background: #D1ECF1;
                color: #0C5460;
            }

            .status-badge.completed {
                background: #D4EDDA;
                color: #155724;
            }
    </style>
</head>
<body>
    <div class="header">
        <h1>
            <span class="logo">🍗</span>
            Kitchen Dashboard
        </h1>
        <button class="menu-btn" onclick="window.location.href='/'">
            📋 MENU
        </button>

    </div>

    <div class="stats">
        <div class="stat-card">
            <h2>@totalOrders</h2>
            <p>Total Orders</p>
        </div>
        <div class="stat-card pending">
            <h2>@pendingOrders</h2>
            <p>Pending</p>
        </div>
        <div class="stat-card progress">
            <h2>@inProgressOrders</h2>
            <p>In progress</p>
        </div>
        <div class="stat-card completed">
            <h2>@completedOrders</h2>
            <p>Completed</p>
        </div>
    </div>

    <div class="filter-tabs">
        <button class="filter-btn active" onclick="filterOrders('all')">
            All Orders
        </button>
        <button class="filter-btn" onclick="filterOrders('pending')">
            <span class="status-dot pending"></span>
            Pending
        </button>
        <button class="filter-btn" onclick="filterOrders('progress')">
            <span class="status-dot progress"></span>
            In Progress
        </button>
        <button class="filter-btn" onclick="filterOrders('completed')">
            <span class="status-dot completed"></span>
            Completed
        </button>
        <button class="filter-btn" onclick="filterOrders('canceled')">
            <span class="status-dot canceled"></span>
            Canceled
        </button>
    </div>

    <div class="orders-grid">
        @foreach (var order in Model.OrderBy(o => o.Status == "Pending" ? 0 : o.Status == "In Progress" ? 1 : 2).ThenByDescending(o => o.OrderDate))
        {
            var statusClass = order.Status.ToLower().Replace(" ", "-");
            var hideByDefault = (order.Status == "Completed" || order.Status == "Canceled") ? "display: none;" : "";
            <div class="order-card @statusClass" data-status="@statusClass" style="@hideByDefault">
                <div class="order-header">
                    <div>
                        <div class="order-number">Order #@order.OrderNumber</div>
                        <div class="table-info">
                            <span style="background: @(order.OrderType == "Unlimited" ? "#9C27B0" : "#FF5722"); color: white; padding: 3px 10px; border-radius: 12px; font-size: 0.8rem; font-weight: 600; margin-right: 8px;">
                                @(order.OrderType ?? "AlaCarte")
                            </span>
                            Table @order.OrderNumber.Last() • Dine in
                        </div>
                    </div>
                    <div class="order-time">
                        Ordered at<br>
                        <strong>@order.OrderDate.ToString("hh:mm tt")</strong><br>
                        <span class="status-badge @statusClass">@order.Status</span>
                    </div>
                </div>

                <div class="order-items">
                    <h4>📋 Order Items:</h4>
                    @foreach (var item in order.Items)
                    {
                        <div class="item-row">
                            <span>@item.ItemName</span>
                            <span>@item.Quantity</span>
                        </div>
                    }
                </div>

                @if (!string.IsNullOrEmpty(order.Items.FirstOrDefault()?.ItemName))
                {
                    <div class="special-instructions">
                        <i class="bi bi-pencil-square"></i>
                        <strong>Special Instructions:</strong><br>
                        No special requests
                    </div>
                }

                <div class="order-actions">
                    @if (order.Status == "Pending")
                    {
                        <button class="action-btn btn-pending" onclick="updateStatus('@order.Id', 'Pending')">
                            ⏱️ Pending
                        </button>
                        <button class="action-btn btn-start" onclick="updateStatus('@order.Id', 'In Progress')">
                            ▶️ Start
                        </button>
                        <button class="action-btn btn-done" onclick="updateStatus('@order.Id', 'Completed')">
                            ✓ Done
                        </button>
                        <button class="action-btn btn-cancel" onclick="updateStatus('@order.Id', 'Canceled')">
                            ✕ Cancel
                        </button>
                    }
                    else if (order.Status == "In Progress")
                    {
                        <button class="action-btn btn-done" onclick="updateStatus('@order.Id', 'Completed')">
                            ✓ Done
                        </button>
                        <button class="action-btn btn-cancel" onclick="updateStatus('@order.Id', 'Canceled')">
                            ✕ Cancel
                        </button>
                    }
                    else
                    {
                        <button class="action-btn btn-done" style="grid-column: 1 / -1;" disabled>
                            Order @order.Status
                        </button>
                    }
                </div>
            </div>
        }
    </div>

    <script>
        function filterOrders(status) {
            const cards = document.querySelectorAll('.order-card');
            const buttons = document.querySelectorAll('.filter-btn');

            buttons.forEach(btn => btn.classList.remove('active'));
            event.target.closest('.filter-btn').classList.add('active');

            cards.forEach(card => {
                if (status === 'all' || card.dataset.status === status) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }

        function updateStatus(orderId, newStatus) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/Kitchen/Kitchen/UpdateStatus';

            const idInput = document.createElement('input');
            idInput.type = 'hidden';
            idInput.name = 'id';
            idInput.value = orderId;

            const statusInput = document.createElement('input');
            statusInput.type = 'hidden';
            statusInput.name = 'status';
            statusInput.value = newStatus;

            form.appendChild(idInput);
            form.appendChild(statusInput);
            document.body.appendChild(form);
            form.submit();
        }
    </script>
</body>
</html>