<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kapitak PakPak</title>

    <link rel="icon" type="image/png" href="~/images/logopakpak.png" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/modals.css" />


    <!-- ✅ Kameron Font (Local) -->
    <style>
        @@font-face {
            font-family: 'Kameron';
            src: url('/fonts/Kameron-zlDL.ttf') format('truetype');
            font-weight: normal;
            font-style: normal;
        }

        @@font-face {
            font-family: 'Kameron';
            src: url('/fonts/KameronBold-59Jv.ttf') format('truetype');
            font-weight: bold;
            font-style: normal;
        }

        body {
            font-family: 'Kameron', 'Segoe UI', sans-serif;
            background-color: #fff8f0;
            margin: 0;
            padding: 0;
        }

        footer {
            text-align: center;
            font-size: 0.9em;
            color: #777;
            padding: 10px;
        }
    </style>
</head>
<body>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top mt-3">
        <p>&copy; 2025 Kapitak PakPak — Self-Ordering System</p>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
