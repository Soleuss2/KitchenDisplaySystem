<!-- Areas/Customer/Views/Shared/Modals/_PersonModal.cshtml -->
<div id="personModal" class="modal-overlay">
    <div class="modal-content">
        <button class="modal-close" id="closePersonModal">
            <i class="bi bi-x-lg"></i>
        </button>

        <div class="modal-header">
            <i class="bi bi-people-fill text-warning" style="font-size: 3rem;"></i>
            <h3>Enter Number of Persons</h3>
        </div>

        <p>Please tell us how many people will be dining today.</p>

        <input type="number" id="personCount" min="1" placeholder="Enter number of persons" />

        <button id="confirmPersons">
            <i class="bi bi-check-circle"></i> Confirm
        </button>
    </div>
</div>
