@model SelfOrderingSystemKiosk.Areas.Customer.Models.Order
@{
    ViewData["Title"] = "Order Confirmation";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

<style>
    /* Container */
    .confirmation-container {
        max-width: 1000px;
        margin: 50px auto;
        background: #fff;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        font-family: 'Segoe UI', sans-serif;
    }

    /* Success icon */
    .success-icon {
        width: 90px;
        height: 90px;
        background: #28a745;
        border-radius: 50%;
        margin: 0 auto 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        animation: scaleIn 0.5s ease-out;
    }
    @@keyframes scaleIn {
        from

    {
        transform: scale(0);
        opacity: 0;
    }

    to {
        transform: scale(1);
        opacity: 1;
    }

    }

    /* Titles and order number */
    .order-number {
        font-size: 2.5rem;
        font-weight: bold;
        color: #ff6b35;
        margin: 10px 0 25px 0;
        text-align: center;
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #ff6b35;
        margin-bottom: 20px;
    }

    /* Order details */
    .order-details {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
    }

    .order-item {
        display: flex;
        justify-content: space-between;
        padding: 8px 0;
        border-bottom: 1px solid #dee2e6;
    }

        .order-item:last-child {
            border-bottom: none;
        }

    .order-total-row {
        display: flex;
        justify-content: space-between;
        font-size: 1.3rem;
        font-weight: bold;
        margin-top: 20px;
        padding-top: 20px;
        border-top: 2px solid #dee2e6;
        color: #ff6b35;
    }

    /* Horizontal Tracking */
    .tracking-container {
        margin-top: 20px;
    }

    .tracking-horizontal {
        display: flex;
        justify-content: space-between;
        position: relative;
        margin-top: 40px;
    }

        .tracking-horizontal::before {
            content: '';
            position: absolute;
            top: 20px;
            left: 10%;
            width: 80%;
            height: 4px;
            background: #dee2e6;
            z-index: 0;
        }

    .tracking-step-horizontal {
        text-align: center;
        position: relative;
        z-index: 1;
        width: 33.33%;
    }

    .tracking-icon-horizontal {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: #6c757d;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 10px;
        color: white;
        font-size: 1.2rem;
        transition: all 0.3s;
    }

    .tracking-step-horizontal.completed .tracking-icon-horizontal {
        background: #28a745;
    }

    .tracking-step-horizontal.in-progress .tracking-icon-horizontal {
        background: #ff6b35;
    }

    .tracking-step-horizontal.pending .tracking-icon-horizontal {
        background: #6c757d;
    }

    .status-badge-large {
        display: inline-block;
        padding: 15px 25px;
        border-radius: 10px;
        font-size: 1.1rem;
        background: #f8f9fa;
        border: 2px solid #dee2e6;
    }

    .status-badge-large.pending {
        background: #fff3cd;
        border-color: #ffc107;
        color: #856404;
    }

    .status-badge-large.in-progress {
        background: #d1ecf1;
        border-color: #0dcaf0;
        color: #0c5460;
    }

    .status-badge-large.completed {
        background: #d4edda;
        border-color: #28a745;
        color: #155724;
    }

    .status-badge-large.canceled {
        background: #f8d7da;
        border-color: #dc3545;
        color: #721c24;
    }

    .tracking-step-horizontal p {
        margin: 0;
        font-size: 0.9rem;
        color: #666;
    }

    /* Buttons */
    .action-buttons {
        margin-top: 40px;
        display: flex;
        gap: 20px;
        justify-content: center;
    }

    .btn-primary {
        background: #ff6b35;
        color: white;
        border: none;
        padding: 12px 35px;
        border-radius: 10px;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.3s;
    }

        .btn-primary:hover {
            background: #e55a2b;
            transform: translateY(-2px);
        }

    .btn-secondary {
        background: #6c757d;
        color: white;
        border: none;
        padding: 12px 35px;
        border-radius: 10px;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.3s;
    }

        .btn-secondary:hover {
            background: #5a6268;
            transform: translateY(-2px);
        }

    .refresh-indicator {
        position: fixed;
        top: 20px;
        right: 20px;
        background: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 8px 15px;
        border-radius: 20px;
        font-size: 0.85rem;
        z-index: 1000;
        display: none;
        align-items: center;
        gap: 8px;
    }

        .refresh-indicator.show {
            display: flex;
        }

        .refresh-indicator .spinner {
            width: 14px;
            height: 14px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-top-color: white;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }

    @@keyframes spin {
        to { transform: rotate(360deg); }
    }

</style>

<div class="confirmation-container">
    <!-- Header -->
    <div class="text-center mb-4">
        <div class="success-icon">
            <i class="bi bi-check-lg" style="font-size: 2.5rem; color: white;"></i>
        </div>
        <h1>Order Confirmed!</h1>
        <p class="text-muted">Thank you for your order</p>
        <div class="order-number">@Model.OrderNumber</div>
        <p class="text-muted">
            <i class="bi bi-clock"></i> Order placed on @Model.OrderDate.ToLocalTime().ToString("MMMM dd, yyyy h:mm tt")
        </p>
    </div>

    <!-- Two Column Layout -->
    <div class="row">
        <!-- LEFT: Order Details -->
        <div class="col-md-6">
            <div class="order-details">
                <h3 class="section-title">Order Details</h3>
                
                <!-- Order Type Badge -->
                <div class="mb-3">
                    <span class="badge bg-primary p-2 px-3" style="font-size: 0.9rem;">
                        <i class="bi bi-@(Model.OrderType == "Unlimited" ? "infinity" : "menu-button-wide")"></i> 
                        @(Model.OrderType == "Unlimited" ? "Unlimited Experience" : "Ala Carte")
                    </span>
                </div>

                <!-- Order Items -->
                @if (Model.Items != null && Model.Items.Any())
                {
                    @foreach (var item in Model.Items)
                    {
                        <div class="order-item">
                            <div>
                                <strong>@item.ItemName</strong>
                                <span style="color: #666;"> x @item.Quantity</span>
                                @if (Model.OrderType == "Unlimited")
                                {
                                    <br /><small style="color: #999; font-size: 0.85em;">Unlimited Menu Item</small>
                                }
                            </div>
                            <div>
                                @if (Model.OrderType == "Unlimited")
                                {
                                    <span style="color: #666; text-decoration: line-through;">₱@((item.Price * item.Quantity).ToString("0.00"))</span>
                                    <br /><span style="color: #28a745; font-weight: bold;">Included</span>
                                }
                                else
                                {
                                    <span>₱@((item.Price * item.Quantity).ToString("0.00"))</span>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">No items in this order.</p>
                }

                <!-- Order Summary -->
                <div style="margin-top: 15px; padding-top: 15px; border-top: 2px solid #dee2e6;">
                    <div class="d-flex justify-content-between mb-2">
                        <span style="font-weight: 500;">Subtotal:</span>
                        <span style="font-weight: 500;">₱@Model.Subtotal.ToString("N2")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span style="font-weight: 500;">Tax (12%):</span>
                        <span style="font-weight: 500;">₱@Model.Tax.ToString("N2")</span>
                    </div>
                </div>
                <div class="order-total-row">
                    <span>Total Amount:</span>
                    <span>₱@Model.Total.ToString("N2")</span>
                </div>
                
                <!-- Order Status Badge -->
                <div class="mt-3">
                    @{
                        var statusClass = Model.Status.ToLower().Replace(" ", "-");
                        var badgeClass = statusClass switch
                        {
                            "pending" => "bg-warning text-dark",
                            "in-progress" => "bg-info text-white",
                            "completed" => "bg-success text-white",
                            "canceled" => "bg-danger text-white",
                            _ => "bg-secondary text-white"
                        };
                    }
                    <span class="badge @badgeClass p-2 px-3" style="font-size: 0.95rem;">
                        <i class="bi bi-@(statusClass == "pending" ? "hourglass-split" : statusClass == "in-progress" ? "arrow-repeat" : statusClass == "completed" ? "check-circle" : "x-circle")"></i> 
                        <strong>Status: @Model.Status</strong>
                    </span>
                </div>
            </div>
        </div>

        <!-- RIGHT: Horizontal Order Tracking -->
        <div class="col-md-6">
            <h3 class="section-title">Order Status</h3>
            <div class="tracking-horizontal">
                <div class="tracking-step-horizontal" data-step="pending">
                    <div class="tracking-icon-horizontal"><i class="bi bi-hourglass-split"></i></div>
                    <p>Pending</p>
                </div>
                <div class="tracking-step-horizontal" data-step="in-progress">
                    <div class="tracking-icon-horizontal"><i class="bi bi-fire"></i></div>
                    <p>In Progress</p>
                </div>
                <div class="tracking-step-horizontal" data-step="completed">
                    <div class="tracking-icon-horizontal"><i class="bi bi-check-circle"></i></div>
                    <p>Completed</p>
                </div>
            </div>
            <div class="mt-4 text-center">
                <div id="statusBadge" class="status-badge-large">
                    <i class="bi bi-info-circle"></i> Current Status: <strong>@Model.Status</strong>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="action-buttons">
        <button class="btn-secondary" onclick="window.print()">
            <i class="bi bi-printer"></i> Print Receipt
        </button>
        <a asp-action="Index" asp-controller="Kiosk" asp-area="Customer" class="btn-primary" style="text-decoration: none;">
            <i class="bi bi-house"></i> New Order
        </a>
    </div>

    <div class="text-center mt-4">
        <p class="text-muted" style="font-size: 0.9rem; margin-bottom: 10px;">
            <i class="bi bi-info-circle"></i> <strong>Save your order number:</strong> <span style="font-size: 1.2rem; color: #ff6b35; font-weight: bold;">@Model.OrderNumber</span>
        </p>
        <p class="text-muted" style="font-size: 0.85rem;">
            Lost this page? Go to the homepage and enter your order number to track your order status anytime.
        </p>
        <a asp-action="Index" asp-controller="Kiosk" asp-area="Customer" style="color: #ff6b35; text-decoration: underline; font-size: 0.9rem;">
            <i class="bi bi-arrow-left"></i> Back to Home / Track Another Order
        </a>
    </div>
</div>

<div class="refresh-indicator" id="refreshIndicator">
    <div class="spinner"></div>
    <span>Checking status...</span>
</div>

<script>
    // Highlight current step based on actual order status
    const orderStatus = "@Model.Status".toLowerCase().replace(" ", "-");
    const statusSteps = ["pending", "in-progress", "completed"];
    const currentStepIndex = statusSteps.indexOf(orderStatus);
    
    document.querySelectorAll('.tracking-step-horizontal').forEach((step, index) => {
        const stepStatus = step.getAttribute('data-step');
        if (index < currentStepIndex) {
            step.classList.add('completed');
        } else if (index === currentStepIndex) {
            step.classList.add('in-progress');
        } else {
            step.classList.add('pending');
        }
    });

    // Update status badge
    const statusBadge = document.getElementById('statusBadge');
    if (statusBadge) {
        statusBadge.className = 'status-badge-large ' + orderStatus;
    }

    // Auto-refresh status every 5 seconds
    let refreshInterval;
    const indicator = document.getElementById('refreshIndicator');
    
    function checkOrderStatus() {
        if (document.hidden) {
            return; // Don't check if page is hidden
        }

        // Show indicator
        if (indicator) {
            indicator.classList.add('show');
        }

        fetch('/Customer/Kiosk/GetOrderStatus?orderNumber=@Model.OrderNumber')
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                // Hide indicator
                if (indicator) {
                    indicator.classList.remove('show');
                }

                if (data.status && data.status !== '@Model.Status') {
                    // Status changed, reload page to show updated status
                    location.reload();
                }
            })
            .catch(error => {
                console.log('Status check failed:', error);
                // Hide indicator on error
                if (indicator) {
                    indicator.classList.remove('show');
                }
            });
    }

    // Start checking status
    refreshInterval = setInterval(checkOrderStatus, 5000);

    // Clear interval when page is hidden, restart when visible
    document.addEventListener('visibilitychange', function() {
        if (document.hidden) {
            if (refreshInterval) {
                clearInterval(refreshInterval);
                refreshInterval = null;
            }
        } else {
            // Restart interval when page becomes visible
            if (!refreshInterval) {
                refreshInterval = setInterval(checkOrderStatus, 5000);
                // Check immediately when page becomes visible
                checkOrderStatus();
            }
        }
    });

    // Initial check after page loads
    setTimeout(checkOrderStatus, 2000);
</script>
