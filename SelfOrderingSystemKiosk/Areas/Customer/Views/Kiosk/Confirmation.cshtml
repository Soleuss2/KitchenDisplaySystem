@model SelfOrderingSystemKiosk.Areas.Customer.Models.Order
@{
    ViewData["Title"] = "Order Confirmation";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

<style>
    /* Container */
    .confirmation-container {
        max-width: 1000px;
        margin: 50px auto;
        background: #fff;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        font-family: 'Segoe UI', sans-serif;
    }

    /* Success icon */
    .success-icon {
        width: 90px;
        height: 90px;
        background: #28a745;
        border-radius: 50%;
        margin: 0 auto 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        animation: scaleIn 0.5s ease-out;
    }
    @@keyframes scaleIn {
        from

    {
        transform: scale(0);
        opacity: 0;
    }

    to {
        transform: scale(1);
        opacity: 1;
    }

    }

    /* Titles and order number */
    .order-number {
        font-size: 2.5rem;
        font-weight: bold;
        color: #ff6b35;
        margin: 10px 0 25px 0;
        text-align: center;
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #ff6b35;
        margin-bottom: 20px;
    }

    /* Order details */
    .order-details {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
    }

    .order-item {
        display: flex;
        justify-content: space-between;
        padding: 8px 0;
        border-bottom: 1px solid #dee2e6;
    }

        .order-item:last-child {
            border-bottom: none;
        }

    .order-total-row {
        display: flex;
        justify-content: space-between;
        font-size: 1.3rem;
        font-weight: bold;
        margin-top: 20px;
        padding-top: 20px;
        border-top: 2px solid #dee2e6;
        color: #ff6b35;
    }

    /* Horizontal Tracking */
    .tracking-container {
        margin-top: 20px;
    }

    .tracking-horizontal {
        display: flex;
        justify-content: space-between;
        position: relative;
        margin-top: 40px;
    }

        .tracking-horizontal::before {
            content: '';
            position: absolute;
            top: 20px;
            left: 5%;
            width: 90%;
            height: 4px;
            background: #dee2e6;
            z-index: 0;
        }

    .tracking-step-horizontal {
        text-align: center;
        position: relative;
        z-index: 1;
        width: 20%;
    }

    .tracking-icon-horizontal {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: #6c757d;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 10px;
        color: white;
        font-size: 1.2rem;
        transition: all 0.3s;
    }

    .tracking-step-horizontal.completed .tracking-icon-horizontal {
        background: #28a745;
    }

    .tracking-step-horizontal.in-progress .tracking-icon-horizontal {
        background: #ff6b35;
    }

    .tracking-step-horizontal.pending .tracking-icon-horizontal {
        background: #6c757d;
    }

    .tracking-step-horizontal p {
        margin: 0;
        font-size: 0.9rem;
        color: #666;
    }

    /* Buttons */
    .action-buttons {
        margin-top: 40px;
        display: flex;
        gap: 20px;
        justify-content: center;
    }

    .btn-primary {
        background: #ff6b35;
        color: white;
        border: none;
        padding: 12px 35px;
        border-radius: 10px;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.3s;
    }

        .btn-primary:hover {
            background: #e55a2b;
            transform: translateY(-2px);
        }

    .btn-secondary {
        background: #6c757d;
        color: white;
        border: none;
        padding: 12px 35px;
        border-radius: 10px;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.3s;
    }

        .btn-secondary:hover {
            background: #5a6268;
            transform: translateY(-2px);
        }

</style>

<div class="confirmation-container">
    <!-- Header -->
    <div class="text-center mb-4">
        <div class="success-icon">
            <i class="bi bi-check-lg" style="font-size: 2.5rem; color: white;"></i>
        </div>
        <h1>Order Confirmed!</h1>
        <p class="text-muted">Thank you for your order</p>
        <div class="order-number">@Model.OrderNumber</div>
        <p class="text-muted">
            <i class="bi bi-clock"></i> Order placed on @Model.OrderDate.ToString("MMMM dd, yyyy hh:mm tt")
        </p>
    </div>

    <!-- Two Column Layout -->
    <div class="row">
        <!-- LEFT: Order Details -->
        <div class="col-md-6">
            <div class="order-details">
                <h3 class="section-title">Order Details</h3>
                @foreach (var item in Model.Items)
                {
                    <div class="order-item">
                        <div>
                            <strong>@item.ItemName</strong>
                            <span style="color: #666;"> x @item.Quantity</span>
                        </div>
                        <div>₱@((item.Price * item.Quantity).ToString("0.00"))</div>
                    </div>
                }
                <div style="margin-top: 15px; padding-top: 10px; border-top: 1px solid #dee2e6;">
                    <div class="d-flex justify-content-between"><span>Subtotal:</span><span>₱@Model.Subtotal.ToString("0.00")</span></div>
                    <div class="d-flex justify-content-between"><span>Tax (12%):</span><span>₱@Model.Tax.ToString("0.00")</span></div>
                </div>
                <div class="order-total-row">
                    <span>Total:</span>
                    <span>₱@Model.Total.ToString("0.00")</span>
                </div>
                <div class="mt-3">
                    <span class="badge bg-warning text-dark p-2 px-3">
                        <i class="bi bi-hourglass-split"></i> Status: @Model.Status
                    </span>
                </div>
            </div>
        </div>

        <!-- RIGHT: Horizontal Order Tracking -->
        <div class="col-md-6">
            <h3 class="section-title">Order Status</h3>
            <div class="tracking-horizontal">
                <div class="tracking-step-horizontal" data-step="0">
                    <div class="tracking-icon-horizontal"><i class="bi bi-receipt"></i></div>
                    <p>Received</p>
                </div>
                <div class="tracking-step-horizontal" data-step="1">
                    <div class="tracking-icon-horizontal"><i class="bi bi-basket"></i></div>
                    <p>Preparing</p>
                </div>
                <div class="tracking-step-horizontal" data-step="2">
                    <div class="tracking-icon-horizontal"><i class="bi bi-fire"></i></div>
                    <p>Cooking</p>
                </div>
                <div class="tracking-step-horizontal" data-step="3">
                    <div class="tracking-icon-horizontal"><i class="bi bi-check2-square"></i></div>
                    <p>Quality</p>
                </div>
                <div class="tracking-step-horizontal" data-step="4">
                    <div class="tracking-icon-horizontal"><i class="bi bi-bag-check"></i></div>
                    <p>Ready</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="action-buttons">
        <button class="btn-secondary" onclick="window.print()">
            <i class="bi bi-printer"></i> Print Receipt
        </button>
        <a asp-action="Index" asp-controller="Kiosk" asp-area="Customer" class="btn-primary" style="text-decoration: none;">
            <i class="bi bi-house"></i> New Order
        </a>
    </div>

    <p class="text-center text-muted mt-4" style="font-size: 0.9rem;">
        Please keep this order number for reference
    </p>
</div>

<script>
    // Highlight current step dynamically
    const statusMap = { "Received":0, "Preparing":1, "Cooking":2, "Quality Check":3, "Ready":4 };
    const currentStep = statusMap["@Model.Status"] || 0;
    document.querySelectorAll('.tracking-step-horizontal').forEach((step,index)=>{
        if(index < currentStep) step.classList.add('completed');
        else if(index===currentStep) step.classList.add('in-progress');
        else step.classList.add('pending');
    });
</script>
