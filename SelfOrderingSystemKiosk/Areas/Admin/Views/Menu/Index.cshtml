@model IEnumerable<SelfOrderingSystemKiosk.Models.InventoryItem>
@{
    ViewData["Title"] = "Menu & Inventory Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="header" style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 15px; margin-bottom: 20px;">
        <div>
            <p style="margin-top: 0;">Manage menu items, inventory, prices, and availability all in one place.</p>
            <p style="color: #666; font-size: 0.9em; margin-top: 5px;">
                <i class="bi bi-info-circle"></i> Showing items from MongoDB Stock collection.
            </p>
        </div>
        <div style="display: flex; gap: 10px; flex-wrap: wrap;">
            <button type="button" class="btn btn-add" onclick="openAddModal()" style="padding: 12px 25px; font-size: 1rem;">
                <i class="bi bi-plus-circle"></i> Add New Item
            </button>
        </div>
    </div>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }

    <div class="table-container">
        @if (Model != null && Model.Any())
        {
            <table>
                <thead>
                    <tr>
                        <th>Menu Item</th>
                        <th>Category</th>
                        <th>Price (₱)</th>
                        <th>Stock</th>
                        <th>Status</th>
                        <th>Availability</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    {
                        <tr>
                            <td>
                                <div style="display: flex; align-items: center; gap: 10px;">
                                    @if (!string.IsNullOrEmpty(i.Image))
                                    {
                                        <img src="@i.Image" alt="@i.Item" style="width: 40px; height: 40px; object-fit: cover; border-radius: 5px;" />
                                    }
                                    <strong>@i.Item</strong>
                                </div>
                            </td>
                            <td>@i.Category</td>
                            <td>₱@i.Price.ToString("0.00")</td>
                            <td>
                                <span class="@(i.CurrentStock <= i.ReorderLevel ? "text-danger" : "text-success")">
                                    @i.CurrentStock @i.Unit
                                </span>
                                @if (i.CurrentStock <= i.ReorderLevel)
                                {
                                    <br /><small style="color: #dc3545;">Reorder: @i.ReorderLevel</small>
                                }
                            </td>
                            <td>
                                <span class="status @(i.Status?.ToLower().Replace(" ", "-") ?? "in-stock")">@i.Status</span>
                            </td>
                            <td>
                                <label class="availability-toggle" style="cursor: pointer; display: inline-flex; align-items: center; gap: 8px;">
                                    <input type="checkbox" 
                                           class="availability-switch" 
                                           data-id="@i.Id"
                                           @(i.Availability == "Available" ? "checked" : "")
                                           onchange="toggleAvailability('@i.Id', this.checked)" />
                                    <span class="toggle-slider"></span>
                                    <span class="availability-label" id="label-@i.Id">
                                        @i.Availability
                                    </span>
                                </label>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button type="button" 
                                            class="btn btn-edit edit-item-btn" 
                                            data-id="@i.Id"
                                            data-name="@i.Item"
                                            data-category="@i.Category"
                                            data-price="@i.Price"
                                            data-stock="@i.CurrentStock"
                                            data-unit="@i.Unit"
                                            data-reorder="@i.ReorderLevel"
                                            data-availability="@i.Availability"
                                            data-image="@i.Image"
                                            onclick="const btn = this; openEditModal(btn.getAttribute('data-id'), btn.getAttribute('data-name'), btn.getAttribute('data-category'), btn.getAttribute('data-price'), btn.getAttribute('data-stock'), btn.getAttribute('data-unit'), btn.getAttribute('data-reorder'), btn.getAttribute('data-availability'), btn.getAttribute('data-image'));">
                                        Edit
                                    </button>
                                    <form asp-action="Delete" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@i.Id" />
                                        <button type="submit" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No menu items found.</p>
        }
    </div>
</div>

