<script>
    function toggleAvailability(itemId, isAvailable) {
        const availability = isAvailable ? 'Available' : 'Unavailable';
        const label = document.getElementById('label-' + itemId);
        
        // Update label immediately for better UX
        label.textContent = availability;
        label.className = 'availability-label ' + availability.toLowerCase();
        
        // Send AJAX request
        fetch('/Admin/Menu/ToggleAvailability', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: 'id=' + encodeURIComponent(itemId) + '&availability=' + encodeURIComponent(availability)
        })
        .then(response => {
            if (response.ok) {
                // Show success message
                const message = availability === 'Available' 
                    ? 'Item is now available on the menu!' 
                    : 'Item is now hidden from the menu.';
                
                // Create temporary success message
                const successMsg = document.createElement('div');
                successMsg.className = 'alert alert-success';
                successMsg.style.cssText = 'position: fixed; top: 20px; right: 20px; z-index: 9999; padding: 15px 20px; border-radius: 5px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);';
                successMsg.textContent = message;
                document.body.appendChild(successMsg);
                
                setTimeout(() => {
                    successMsg.remove();
                }, 3000);
            } else {
                // Revert on error
                const checkbox = document.querySelector(`[data-id="${itemId}"]`);
                checkbox.checked = !isAvailable;
                label.textContent = isAvailable ? 'Unavailable' : 'Available';
                label.className = 'availability-label ' + (isAvailable ? 'unavailable' : 'available');
                
                alert('Failed to update availability. Please try again.');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            // Revert on error
            const checkbox = document.querySelector(`[data-id="${itemId}"]`);
            checkbox.checked = !isAvailable;
            label.textContent = isAvailable ? 'Unavailable' : 'Available';
            label.className = 'availability-label ' + (isAvailable ? 'unavailable' : 'available');
            
            alert('An error occurred. Please try again.');
        });
    }

    // Modal Functions
    function openAddModal() {
        document.getElementById('addItemModal').classList.add('active');
        document.getElementById('addItemForm').reset();
    }

    function closeAddModal() {
        document.getElementById('addItemModal').classList.remove('active');
        document.getElementById('addItemForm').reset();
        clearImagePreview('addImageFile', 'addImagePreview');
    }

    // Close modal when clicking outside
    function setupAddModal() {
        const addModal = document.getElementById('addItemModal');
        if (addModal) {
            addModal.addEventListener('click', function(e) {
                if (e.target === this) {
                    closeAddModal();
                }
            });
        }
    }

    // Close modal on ESC key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            closeAddModal();
            closeEditModal();
        }
    });

    // Image Preview Functions
    function previewImage(input, previewContainerId) {
        const previewContainer = document.getElementById(previewContainerId);
        const previewImg = document.getElementById(previewContainerId + 'Img');
        
        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function(e) {
                previewImg.src = e.target.result;
                previewContainer.style.display = 'block';
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
    
    function clearImagePreview(inputId, previewContainerId) {
        const input = document.getElementById(inputId);
        const previewContainer = document.getElementById(previewContainerId);
        if (input) input.value = '';
        if (previewContainer) previewContainer.style.display = 'none';
    }

    // Edit Modal Functions
    function openEditModal(id, name, category, price, stock, unit, reorderLevel, availability, image) {
        try {
            const modal = document.getElementById('editItemModal');
            if (!modal) {
                console.error('Edit modal not found');
                return;
            }
            
            modal.classList.add('active');
            
            // Populate form fields
            const idField = document.getElementById('editItemId');
            const nameField = document.getElementById('editItemName');
            const categoryField = document.getElementById('editCategory');
            const priceField = document.getElementById('editPrice');
            const stockField = document.getElementById('editCurrentStock');
            const unitField = document.getElementById('editUnit');
            const reorderField = document.getElementById('editReorderLevel');
            const availabilityField = document.getElementById('editAvailability');
            const imageField = document.getElementById('editItemImage');
            const currentImageImg = document.getElementById('editCurrentImageImg');
            const currentImageDiv = document.getElementById('editCurrentImage');
            
            if (idField) idField.value = id || '';
            if (nameField) nameField.value = name || '';
            if (categoryField) categoryField.value = category || 'Wings';
            if (priceField) priceField.value = price || '0';
            if (stockField) stockField.value = stock || '0';
            if (unitField) unitField.value = unit || 'pcs';
            if (reorderField) reorderField.value = reorderLevel || '10';
            if (availabilityField) availabilityField.value = availability || 'Available';
            if (imageField) imageField.value = image || '';
            
            // Show current image if exists
            if (image && currentImageImg) {
                currentImageImg.src = image;
                currentImageImg.style.display = 'block';
            } else if (currentImageImg) {
                currentImageImg.style.display = 'none';
            }
            
            // Clear any preview
            clearImagePreview('editImageFile', 'editImagePreview');
        } catch (error) {
            console.error('Error opening edit modal:', error);
            alert('Error opening edit form. Please refresh the page and try again.');
        }
    }

    // Use event delegation for edit buttons (works even if buttons are added dynamically)
    document.addEventListener('click', function(e) {
        // Check if clicked element or its parent has the edit-item-btn class
        const button = e.target.closest('.edit-item-btn');
        if (button) {
            e.preventDefault();
            e.stopPropagation();
            console.log('Edit button clicked:', button);
            const id = button.getAttribute('data-id');
            const name = button.getAttribute('data-name');
            console.log('Opening edit modal for:', id, name);
            openEditModal(
                id,
                name,
                button.getAttribute('data-category'),
                button.getAttribute('data-price'),
                button.getAttribute('data-stock'),
                button.getAttribute('data-unit'),
                button.getAttribute('data-reorder'),
                button.getAttribute('data-availability'),
                button.getAttribute('data-image')
            );
        }
    });

    function closeEditModal() {
        const modal = document.getElementById('editItemModal');
        if (modal) {
            modal.classList.remove('active');
            const form = document.getElementById('editItemForm');
            if (form) {
                form.reset();
            }
            clearImagePreview('editImageFile', 'editImagePreview');
        }
    }

    // Set up edit modal click outside handler when DOM is ready
    function setupEditModal() {
        const editModal = document.getElementById('editItemModal');
        if (editModal) {
            editModal.addEventListener('click', function(e) {
                if (e.target === this) {
                    closeEditModal();
                }
            });
        }
    }

    // Initialize when DOM is ready
    function initializeModals() {
        setupAddModal();
        setupEditModal();
        
        // Setup form submission handlers
        const addForm = document.getElementById('addItemForm');
        if (addForm) {
            addForm.addEventListener('submit', function() {
                setTimeout(function() {
                    closeAddModal();
                }, 100);
            });
        }
        
        const editForm = document.getElementById('editItemForm');
        if (editForm) {
            editForm.addEventListener('submit', function() {
                setTimeout(function() {
                    closeEditModal();
                }, 100);
            });
        }
    }
    
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initializeModals);
    } else {
        initializeModals();
    }
</script>

