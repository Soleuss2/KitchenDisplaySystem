@model SelfOrderingSystemKiosk.Models.ChickenFlavors
@{
    ViewData["Title"] = "Edit Menu Item";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="header">
        <h2>✏️ Edit Menu Item</h2>
        <p>Modify details for <strong>@Model.Name</strong></p>
    </div>

    <div class="form-container">
        <form asp-action="Edit" method="post" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px; max-width: 800px;">
            <input type="hidden" name="Id" value="@Model.Id" />
            
            <div>
                <label>Menu Item Name *</label>
                <input type="text" name="Name" value="@Model.Name" placeholder="Menu Item" required style="width: 100%; padding: 10px; border: 2px solid #ddd; border-radius: 5px;" />
            </div>
            
            <div>
                <label>Category *</label>
                <select name="Category" required style="width: 100%; padding: 10px; border: 2px solid #ddd; border-radius: 5px;">
                    <option value="Wings" selected="@(Model.Category == "Wings")">Wings</option>
                    <option value="Appetizer" selected="@(Model.Category == "Appetizer")">Appetizer</option>
                    <option value="Add Ons" selected="@(Model.Category == "Add Ons")">Add Ons</option>
                </select>
            </div>
            
            <div>
                <label>Price (₱) *</label>
                <input type="number" step="0.01" name="Price" value="@Model.Price" placeholder="Price" required min="0" style="width: 100%; padding: 10px; border: 2px solid #ddd; border-radius: 5px;" />
            </div>
            
            <div>
                <label>Current Stock *</label>
                <input type="number" name="CurrentStock" value="@Model.CurrentStock" placeholder="Stock" min="0" required style="width: 100%; padding: 10px; border: 2px solid #ddd; border-radius: 5px;" />
            </div>
            
            <div>
                <label>Unit *</label>
                <select name="Unit" required style="width: 100%; padding: 10px; border: 2px solid #ddd; border-radius: 5px;">
                    <option value="pcs" selected="@(Model.Unit == "pcs")">pcs (pieces)</option>
                    <option value="kg" selected="@(Model.Unit == "kg")">kg (kilograms)</option>
                    <option value="lbs" selected="@(Model.Unit == "lbs")">lbs (pounds)</option>
                    <option value="oz" selected="@(Model.Unit == "oz")">oz (ounces)</option>
                    <option value="g" selected="@(Model.Unit == "g")">g (grams)</option>
                    <option value="L" selected="@(Model.Unit == "L")">L (liters)</option>
                    <option value="ml" selected="@(Model.Unit == "ml")">ml (milliliters)</option>
                </select>
            </div>
            
            <div>
                <label>Reorder Level *</label>
                <input type="number" name="ReorderLevel" value="@Model.ReorderLevel" placeholder="Reorder Level" min="0" required style="width: 100%; padding: 10px; border: 2px solid #ddd; border-radius: 5px;" />
            </div>
            
            <div>
                <label>Availability *</label>
                <select name="Availability" required style="width: 100%; padding: 10px; border: 2px solid #ddd; border-radius: 5px;">
                    <option value="Available" selected="@(Model.Availability == "Available")">Available</option>
                    <option value="Unavailable" selected="@(Model.Availability == "Unavailable")">Unavailable</option>
                </select>
            </div>

            <div style="grid-column: 1 / -1; display: flex; gap: 10px; margin-top: 10px;">
                <button type="submit" class="btn btn-edit">Save Changes</button>
                <a asp-action="Index" class="btn btn-delete">Cancel</a>
            </div>
        </form>
    </div>
</div>
