@model SelfOrderingSystemKiosk.Controllers.MenuItem
@{
    ViewData["Title"] = "Edit Menu Item";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="header">
        <h2>✏️ Edit Menu Item</h2>
        <p>Modify details for <strong>@Model.Name</strong></p>
    </div>

    <div class="form-container">
        <form asp-action="Edit" method="post" class="form-inline">
            <input type="hidden" name="Id" value="@Model.Id" />
            <input type="text" name="Name" value="@Model.Name" placeholder="Menu Item" required />
            <input type="text" name="Category" value="@Model.Category" placeholder="Category" required />
            <input type="number" step="0.01" name="Price" value="@Model.Price" placeholder="Price" required />
            <select name="Availability" required>
                <option value="Available" selected="@(Model.Availability == "Available")">Available</option>
                <option value="Unavailable" selected="@(Model.Availability == "Unavailable")">Unavailable</option>
            </select>

            <div class="btn-group">
                <button type="submit" class="btn btn-edit">Save Changes</button>
                <a asp-action="Index" class="btn btn-delete">Cancel</a>
            </div>
        </form>
    </div>
</div>
