@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password - KDS Admin</title>
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body class="auth-body">
    <div class="auth-container">
        <div class="auth-card">
            <h2 class="auth-title">🔐 Forgot Password</h2>
            <form asp-action="ForgotPassword" method="post" class="auth-form">
                <input type="email" name="email" placeholder="Enter your email address" required />
                <button type="submit" class="auth-btn">Send Reset Link</button>

                @if (ViewBag.Error != null)
                {
                    <p class="auth-error">@ViewBag.Error</p>
                }

                @if (ViewBag.Message != null)
                {
                    <p class="auth-success">@ViewBag.Message</p>
                }

                <div class="auth-links">
                    <a asp-action="Login" asp-controller="Account">← Back to Login</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
